<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codex.freeplay.CreateActivity">

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/background_light"
        app:srcCompat="@drawable/paper"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="379dp"
        android:layout_height="166dp"
        app:srcCompat="@android:color/darker_gray"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="159dp"
        android:layout_height="129dp"
        app:srcCompat="@drawable/checkm"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="169dp"
        android:layout_height="130dp"
        android:gravity="top|fill_vertical|center_horizontal"
        android:text="Acabamos de enviarte un codgio de verificación a tu correo"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="327dp"
        tools:text="example@correo.com" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="190dp"
        tools:text="Insertar codigo" />

    <Button
        android:id="@+id/button5"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        android:text="Cambiar"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="258dp"
        tools:layout_editor_absoluteY="327dp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        android:text="Ingresar"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="258dp"
        tools:layout_editor_absoluteY="190dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reenviar codigo"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="447dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="345dp"
        android:layout_height="56dp"
        android:gravity="top|fill_vertical|center_horizontal"
        android:text="Si no haz resibido tu codigo, dale clik al boton para poder reenviartelo "
        android:textSize="18sp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="384dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="345dp"
        android:layout_height="43dp"
        android:gravity="top|fill_vertical|center_horizontal"
        android:text="¿Este es tu correo?"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="277dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="220dp" />

</android.support.constraint.ConstraintLayout>
